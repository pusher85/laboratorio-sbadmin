
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				Interventi aperti
			</div>
			<!-- /.panel-heading -->
			<div class="panel-body">
				<div class="dataTable_wrapper">
					<table class="table table-striped table-bordered table-hover" id="dataTables-aperti">
						<thead>
						  <tr>
								<th>Cliente</th>
								<th>Descrizione</th>
								<th>Data Apertura</th>
								<th>Tecnico</th>
								<th>Visualizza</th>
						  </tr>
				  	</thead>

				  	<tbody>
						  <% @interventi.each do |intervento| %>
						  <% @cliente = Clienti.find(intervento.cliente_id) %>
						  <% @tecnico = Utenti.find(intervento.operator_id) if intervento.operator_id? %>
							<tr>
							  <td><%= @cliente.nome %></td>
							  <td><%= truncate(intervento.intervento, length: 55, omission: '...(continua)...') %></td>
							  <td><%= intervento.data %></td>
							  <td><%= @tecnico.nome if intervento.operator_id? %></td>
							  <td><%= link_to '<i class="material-icons">pageview</i>'.html_safe, clienti_interventi_path(:clienti_id => intervento.cliente_id, :id => intervento.id) %></td>
							</tr>
						  <% end %>
				  	</tbody>
					</table>
				</div><!-- /.dataTable_wrapper -->
			</div><!-- /.panel-body -->
		</div><!-- /.panel panel-default -->
	</div><!-- /.col -->
</div><!-- /.row -->



