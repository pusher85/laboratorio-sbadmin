<h1>Welcome#index</h1>
<p>Find me in app/views/welcome/idex.html.erb</p>

<br>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<br>


<p>Ci sono <%= @conta_aperti %> interventi aperti. Clicca <%= link_to 'quì', welcome_aperti_path %> per visualizzarli</p>
<hr>
<p>Hai un credito residuo per gli sms di €<%= @credito_skebby.round(2) %></p>
<hr>
<p><%= link_to "Nuova pagina di login", welcome_login_path %></p>

<hr>

<%= form_for :utenti, url: utenti_session_path do |f| %>
  <%= f.text_field :email %><br>
  <%= f.password_field :password %><br>
  <%= f.check_box :remember_me %><br>
  <%= f.label :remember_me %><br>
  <%= f.submit 'Sign in' %>
  <%= link_to "Forgot your password?", new_utenti_password_path %>
<% end %>


<hr>

<% if utenti_signed_in? %>
	<p>Sei loggato come:<%= current_utenti.email  %> </p>
<% end %>




<% flash.each do |key, value| %>
		<hr>
        <div class="alert alert-<%= key %>">
        	<%= key %> : <%= value %>
        </div>
		<hr>
	<% end %>


<%= debug(params) %>

<script>
	function cookie_barra_aperta() {
		document.cookie = 'navigation=aperta'; 
	}

	function cookie_barra_chiusa() {
		document.cookie = 'navigation=chiusa'; 
	}

</script>

