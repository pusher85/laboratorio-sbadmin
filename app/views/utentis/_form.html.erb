<% if local_assigns.has_key? :url %>
  <%= form_for :utentis, url: url, method: method, class: "col s12" do |f| %>  
<%#= @miocliente.nome if @miocliente %>
  <div class="row">
    <div class="col-md-6">
      <%= f.label :nome %>
      <div class="form-group input-group">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
        <%= f.text_field :nome, :length=>"254", class: "form-control", :value => @miocliente ? @miocliente.nome : @utenti.nome %>
      </div>
    </div>

    <div class="col-md-6">
      <%= f.label :email %>
      <div class="form-group input-group">
        <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
        <%#= f.text_field :email, :length=>"254", class: "form-control", :value => @utenti.email %>
        <%= f.text_field :email, :length=>"254", class: "form-control", :value => @miocliente ? @miocliente.email : @utenti.email %>
      </div>
    </div>
  </div>

  <!-- -->

  <div class="row">

    <div class="col-md-6">
      <%= f.label :password %>
      <div class="form-group input-group">
        <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>

    <%= f.hidden_field :clienti_id, :value => @miocliente.id if @miocliente %>

  	<div class="col-lg-6">
  		<div class="form-group">
        <p>Tipologia</p>

        <label class="checkbox-inline">
          <!-- <input type="checkbox" class="square-red" value="" checked="checked"> -->
          <%= f.check_box :paid, class: 'square-green', checked: false %>
          Operatore
        </label>
        <label class="checkbox-inline">
          <!-- <input type="checkbox" class="square-green" value="" checked="checked"> -->
          <%= f.check_box :admin, class: 'square-red', :checked => @utenti.admin ? true : false %>
          Amministratore
        </label>
       

        <%#= f.select :clienti_id, options_for_select(@clienti.collect{ |cli| [cli.nome, cli.id] }, @utenti.clienti_id), {include_blank: '--nessuno--'}, class: 'form-control' %>
  		</div>
  	</div>

  </div>

  <!--      -->

  <div class="row">
    <div class="col-md-3">
       <div class="form-group">
        <%= link_to 'Indietro', utentis_path, class: 'btn btn-danger' %>
        <%= f.submit 'Salva', :class => 'btn btn-success' %>
       </div>
    </div>
  </div>


  <!--      -->
  <% end %>
<% end %>