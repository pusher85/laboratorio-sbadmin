<div class="row">
	<div class="col-lg-12">

		<%if !@utenti.clienti_id? %>
			<div class="alert alert-danger">
				<button data-dismiss="alert" class="close">		×	</button>
				<i class="fa fa-times-circle"></i>
				<strong>ATTENZIONE !! </strong> Alla login non è associata nessuna utenza.
			</div>
		<% end %>

		<div class="well well-lg">
				<h4>Cliente: <%= @utenti.nome %></h4>
			 	<ul class="list-unstyled">
			 		<li><span>Nome: </span><%= @utenti.nome%></li>
					<li><span>Email: </span><%= @utenti.email%>     <-- Login! </li>
					<li><span>Cliente Associato: </span><%= @utenti.nomecliente %></li>
					<li><span>Ultimo Login: </span><%= @utenti.last_sign_in_at%></li>
					<li><span>Ultimo IP: </span><%= @utenti.last_sign_in_ip%></li>
				</ul>
		</div>

		


	</div>
</div>

<div class="divider"></div>

<div class="row">
	<div class="col-lg-12">
		<%= link_to 'Indietro', utentis_path, class: 'btn btn-danger' %>
		<%= link_to 'Modifica', edit_utenti_path(@utenti.id), class: 'btn btn-primary' %>
		<%#= link_to 'Nuovo Intervento', new_clienti_interventi_path(:clienti_id => @utenti.id), class: 'btn btn-success' %>
	</div>
</div>
