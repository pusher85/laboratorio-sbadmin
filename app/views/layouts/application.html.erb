			<%= javascript_include_tag "/assets/plugins/jQuery-Tags-Input/jquery.tagsinput" %>
			<%= javascript_include_tag "/assets/plugins/bootstrap-fileupload/bootstrap-fileupload.min" %>
			<%= javascript_include_tag "/assets/plugins/summernote/build/summernote.min" %>
			<%= javascript_include_tag "/assets/plugins/ckeditor/ckeditor" %>
			<%= javascript_include_tag "/assets/plugins/ckeditor/adapters/jquery" %>
		<% end %>


		<% if params[:controller] == 'interventi' && params[:action] == 'show' %>
			<!-- 	JS Specifici per modal in show per tecnico	-->
			<!--		Inizio Modal -->
			<div id="responsive" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
						&times;
					</button>
					<h4 class="modal-title">Seleziona il tecnico per l'intervento</h4>
				</div>
				<div class="modal-body">
					<div class="row">
						<div class="col-md-12">
							<%= form_for :interventi, url: clienti_interventi_path(@clienti, @interventi), method: :patch do |f| %>
								<%= f.select :operator_id, options_for_select(@tecnici.collect{ |tec| [tec.nome, tec.id] }, @interventi.operator_id ), {include_blank: '--seleziona--'}, class: 'form-control' %>
						</div>
					</div>	
				</div>
				<div class="modal-footer">
								<%= f.submit 'Salva', :class => 'btn btn-success' %>
							<% end %>
				</div>
			</div>
			<!-- 	Fine Modal -->


			<%= javascript_include_tag "/assets/plugins/bootstrap-modal/js/bootstrap-modal.js" %>
			<%= javascript_include_tag "/assets/plugins/bootstrap-modal/js/bootstrap-modalmanager" %>
