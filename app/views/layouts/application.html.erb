	</head>
	<body <% if cookies[:navigation] == 'chiusa' %><%= "class=navigation-small" %><% end %>> <!-- class="navigation-small" -->





	<%= render "layouts/header" %>

	<div class="main-container">

		<%= render "layouts/navbar" %>


		<!-- start: PAGE -->
		<div class="main-content">
			<div class="container">
				<div class="row">

					<!-- start: PAGE HEADER -->
					<div class="col-sm-12">
						<!-- start: PAGE TITLE & BREADCRUMB -->
						<ol class="breadcrumb">
							<li>
								<i class="clip-file"></i>
								<a href="#">
									<%= controller_name %>
								</a>
							</li>
							<li class="active">
								<%= action_name %>
							</li>

						</ol>
						<div class="page-header">
							<h1><%= @titolo %> <small><%= @titolo2 %></small></h1>
						</div>
						<!-- end: PAGE TITLE & BREADCRUMB -->
					</div>
				</div>
				<!-- end: PAGE HEADER -->

				<!-- start: PAGE CONTENT -->
				<%= yield %>
				
				<!-- end: PAGE CONTENT-->

			</div>
		</div>
		<!-- end: PAGE -->
	</div>
		<%= render "layouts/footer" %>



		<!-- JS Generici -->
		<%= javascript_include_tag "/assets/plugins/jQuery-lib/2.0.3/jquery.min" %>
