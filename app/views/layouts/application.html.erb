		<%= javascript_include_tag "/assets/plugins/jquery-cookie/jquery.cookie" %>
		<%= javascript_include_tag "/assets/plugins/bootstrap-colorpalette/js/bootstrap-colorpalette" %>
		<%= javascript_include_tag "/assets/js/main" %>
		<!-- JS Generici FINE -->


		<!-- Javascript specifici per la pagina -->

		<% if params[:controller] == 'clienti' && params[:action] == 'index' %>
			<!-- 	JS Specifici per clienti#index	-->
			<%= javascript_include_tag "/assets/plugins/bootbox/bootbox.min" %>
			<%= javascript_include_tag "/assets/plugins/jquery-mockjax/jquery.mockjax" %>
			<%= javascript_include_tag "/assets/plugins/select2/select2.min" %>
			<%= javascript_include_tag "/assets/plugins/DataTables/media/js/jquery.dataTables.min" %>
			<%= javascript_include_tag "/assets/plugins/DataTables/media/js/DT_bootstrap" %>
			<%= javascript_include_tag "/assets/js/table-data" %>
			<!-- 		-->
		<% end %>



		<% if params[:controller] == 'utentis' && params[:action] == 'index' %>
			<!-- 	JS Specifici per utentis_path	-->
			<%= javascript_include_tag "/assets/plugins/bootbox/bootbox.min" %>
			<%= javascript_include_tag "/assets/plugins/jquery-mockjax/jquery.mockjax" %>
			<%= javascript_include_tag "/assets/plugins/select2/select2.min" %>
			<%= javascript_include_tag "/assets/plugins/DataTables/media/js/jquery.dataTables.min" %>
			<%= javascript_include_tag "/assets/plugins/DataTables/media/js/DT_bootstrap" %>
			<%= javascript_include_tag "/assets/js/table-data" %>
		<% end %>


		
		<% if params[:controller] == 'interventi' && params[:action] == 'index' %>

			<%= javascript_include_tag "/assets/plugins/bootbox/bootbox.min" %>
			<%= javascript_include_tag "/assets/plugins/jquery-mockjax/jquery.mockjax" %>
			<%= javascript_include_tag "/assets/plugins/select2/select2.min" %>
			<%= javascript_include_tag "/assets/plugins/DataTables/media/js/jquery.dataTables.min" %>
			<%= javascript_include_tag "/assets/plugins/DataTables/media/js/DT_bootstrap" %>
			<%= javascript_include_tag "/assets/js/table-data" %>
		<% end %>


		<% if params[:controller] == 'interventi' && params[:action] == 'new' %>
