			<%= javascript_include_tag "/assets/plugins/jquery-inputlimiter/jquery.inputlimiter.1.3.1.min" %>
			<%= javascript_include_tag "/assets/plugins/autosize/jquery.autosize.min" %>
			<%= javascript_include_tag "/assets/plugins/select2/select2.min" %>
