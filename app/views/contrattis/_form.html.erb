<%#= form_for :contratti, url: clienti_contrattis_path do |f| %>
  

  
  
  
<% if local_assigns.has_key? :url %>
  <%= form_for :contratti, url: url, method: method do |f| %>


<div class="row">
      <div class="col s2 input-field">
        <%= f.label "Id Cliente" %><br><%= f.number_field :clienti_id, :value => @clienti.id, readonly: true %>
      </div>

      <div class="col s3 input-field">
        <%= f.label "Data Acquisto (YYY - MM - DD)" %><br><%= f.date_field :acquisto, :class => "datepicker", :type => "date", :value => Time.now.strftime("%Y/%m/%d"), readonly: true %>
      </div>
        
      <div class="col s3 input-field">
        <%= f.label :ore %><br><%= f.number_field :ore %>
      </div>
</div>

<div class="row">
      <div class="col s12 input-field">
        <%= f.label :note %><br><%= f.text_area :note, class: 'materialize-textarea' %>
      </div>
</div>

<div class="row">
  <ul class="lista-pulsanti">

    <li><%= link_to '<i class="material-icons left">fast_rewind</i>Indietro'.html_safe, clienti_contrattis_path(@clienti.id), class: 'waves-effect waves-light btn' %></li>

    <li><%= f.submit 'Salva', :class => 'btn waves-effect waves-light green' %></li>

  </ul>
</div>
<% end %>


<script type="text/javascript">
$('.datepicker').pickadate({
    selectMonths: true, // Creates a dropdown to control month
    selectYears: 3, // Creates a dropdown of 15 years to control year
    format: 'yyyy/mm/dd',
    onSet: function() {
        setTimeout(this.close, 0);
    }
  });
</script>

<% end %>