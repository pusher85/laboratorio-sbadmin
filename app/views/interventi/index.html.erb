
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2>Interventi per: <br><%= @clienti.nome %></h2>
		<hr>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
			<div class="dataTable_wrapper">
				<table class="table table-striped table-bordered table-hover" id="dataTables-interventi">
					<thead>
						<tr>
							<th>Data</th>
							<th>Intervento</th>
							<th>vedi</th>
							<th>stato</th>
							<th>MSG</th>
							<th></th>
						</tr>
					</thead>

					<tbody>
						<% @interventi.each do |intervento| %>
						<tr class="text-center">
							<td><%= intervento.data.strftime("%d/%m/%Y") %></td>
							<td><%= intervento.intervento %></td>
							<td><%= link_to '<i class="material-icons">pageview</i>'.html_safe, clienti_interventi_path(:id => intervento.id) %></td>
							<td><% if intervento.chiuso == false %>
								<%= image_tag("warning_32.png", size: '25x25') %>
								<% end %>
							</td>
							<td>
								<%#= link_to 'spedisci', clienti_interventi_sms_path(:interventi_id => intervento.id) %>
								<%= link_to '<i class="material-icons" title="Invia Comunicazione">textsms</i>'.html_safe, new_clienti_interventi_comunicazioni_path(:interventi_id => intervento.id) %>
							</td>
							<td>
								<div class="chip">
									<%= image_tag("sms_128.png", size: '25x25') %>
									<%= intervento.tot_comunicazioni %>
							  	</div>
							</td>	
						</tr>
						<% end %>
					</tbody>
				</table>
		</div>
	</div>
</div>


<div class="divider"></div>

<div class="row">
	<div class="col-lg-12">
		<%= link_to 'Indietro', clienti_path(@clienti.id), class: 'btn btn-danger' %>
	</div>
</div>

<div class="divider"></div>

