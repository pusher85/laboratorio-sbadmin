<% if local_assigns.has_key? :url %>
  <%= form_for :interventi, url: url, method: method do |f| %>

    <div class="row">
      <div class="col s12">
        <h4>Cliente: <%= @clienti.nome %> - [<%= @clienti.id %>]</h4>
      </div>
    </div>


    <div class="row">
      <div class="col s2 input-field">
        <%= f.label :cliente_id %><br><%= f.text_field :cliente_id, :value => @clienti.id, readonly: true %>
      </div>

      <div class="col s6 input-field">
        <%= f.label "Cliente" %><br><%= f.text_field :cliente_nome, :value => @clienti.nome, readonly: true %>
      </div>

      <div class="col s4 input-field hoverable">
        <%= f.label :data, 'Data (YYY - MM - DD)' %><br><%= f.date_field :data, :class => "datepicker", :type => "date", :value => Time.now.strftime("%Y/%m/%d"), readonly: true %>
      </div>
    </div>


    <div class="row">
      <div class="col s10 input-field hoverable">
        <%= f.label "Descrizione Intervento" %><br><%= f.text_area :intervento, maxlength: 200, class: 'materialize-textarea' %>
      </div>

      <div class="col s2 input-field hoverable">
        <%= f.label "Durata (H)" %><br><%= f.text_field :durata, maxlength: 2 %>
      </div>
    </div>


    <div class="row">
      <div class"col s12 input-field hoverable">
        <%= f.label :note %><br><%= f.text_area :note, maxlength: 200, class: 'materialize-textarea' %>
      </div>
    </div>


    <div class="row">
      <div class="col s4">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">Stato Intervento</span>
            <div class="switch">
              <label>
                Aperto
                <%= f.check_box :chiuso, {:class => "myclass", :style => "mystyle"}, "1" %>
                <span class="lever"></span>
                Chiuso
              </label>
            </div>
          </div>
        </div>
      </div>
    </div>


    <div class="row">
      <ul class="lista-pulsanti">
        <li><%= link_to '<i class="material-icons left">fast_rewind</i>Indietro'.html_safe, clienti_path(:id => @clienti.id), class: 'waves-effect waves-light btn' %></li>
        <li><%= f.submit 'Salva', :class => 'btn waves-effect waves-light green' %></li>
      </ul>
    </div>

<% end %>

<script type="text/javascript">
$('.datepicker').pickadate({
    selectMonths: true, // Creates a dropdown to control month
    selectYears: 3, // Creates a dropdown of 15 years to control year
    format: 'yyyy/mm/dd',
    onSet: function() {
        setTimeout(this.close, 0);
    }
  });
</script>

<% end %>