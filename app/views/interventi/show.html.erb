<div class="row">
	<div class="col-md-6 col-md-offset-3" align="center">
		<h2>Cliente: <%= @clienti.nome %></h2>
		<hr>
	</div>
</div>

<div class="divider"></div>

<div class="row">
	<div class="col-lg-12">


		<div class="dropdown pull-right">
		  <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
		    Actions
		    <span class="caret"></span>
		  </button>
		  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
		    <li><%= link_to 'Modifica', edit_clienti_interventi_path(:id => @interventi.id) %></li>
		    <li><%= link_to 'Elimina', clienti_interventi_path(:id => @interventi.id), method: :delete, data: { confirm: 'Sicuro di voler eliminare?' } %></li>
		    <li><%= link_to 'Invia Comunicazione', new_clienti_interventi_comunicazioni_path(:interventi_id => @interventi.id) %></li>
		    <li role="separator" class="divider"></li>
		    <li><a href="#">Separated link</a></li>
		  </ul>
		</div>


	</div>
</div>

<!-- 		-->
<div class="row">
	<div class="col-lg-6">
		<p>Codice Cliente: <%= @interventi.cliente_id %> </p>
		<p>Codice Intervento: <%= @interventi.codice %> </p>
		<blockquote>
			<p>
				<strong>Data Intervento: </strong>
				<%= @interventi.data.strftime("%d/%m/%Y") %>
			</p>

			<p>
				<strong>Durata: </strong>
				<%= @interventi.durata %> ore
			</p>

			<p>
				<strong>Descrizione: </strong>
				<%= @interventi.intervento %>
			</p>

			<p>
				<strong>Annotazioni: </strong>
				<%= @interventi.note %>
			</p>


		</blockquote>
	</div>
</div>

	

<div class="divider"></div>
<br>


<div class="row">
	<div class="col-lg-12">
		<%= link_to 'Indietro', clienti_interventi_index_path(@clienti.id), class: 'btn btn-danger' %>
	</div>
</div>



