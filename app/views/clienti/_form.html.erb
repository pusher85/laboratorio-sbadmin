<% if local_assigns.has_key? :url %>
  <%= form_for :clienti, url: url, method: method, class: "col s12" do |f| %>   


  <div class="row">
    <div class="col-md-12">
      <%= f.label :nome %>
      <div class="form-group input-group">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
        <%= f.text_field :nome, :length=>"254", class: "form-control" %>
      </div>
    </div>
  </div>

  <!-- -->

  <div class="row">
    <div class="col-md-6">
      <%= f.label :codfisc %>
      <div class="form-group input-group">
        <span class="input-group-addon"><i class="fa fa-barcode"></i></span>
        <%= f.text_field :codfisc, :length=>"16", :maxlength=>"16", class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <%= f.label :piva %>
      <div class="form-group input-group">
        <span class="input-group-addon"><i class="fa fa-barcode"></i></span>
        <%= f.text_field :piva, :length=>"16", :maxlength=>"18", class: "form-control" %>
      </div>
    </div>
  </div>
  
  <!-- -->

  <div class="row">
    <div class="col-md-6">
      <%= f.label :telefono %>
       <div class="form-group input-group">
          <span class="input-group-addon"><i class="fa fa-phone-square"></i></span>
          <%= f.text_field :telefono, :length=>"15", class: "form-control" %>
       </div>
    </div>

    <div class="col-md-6">
        <%= f.label :email %>
       <div class="form-group input-group">
          <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
          <%= f.text_field :email, class: "form-control" %>
       </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
       <div class="form-group">
          <%= f.label :note %><%= f.text_area :note, class: "form-control" %>
       </div>
    </div>
  </div>


  <div class="row">
    <div class="col-md-3">
       <div class="form-group">
        <%= link_to 'Indietro', utentis_path, class: 'btn btn-danger' %>
        <%= f.submit 'Salva', :class => 'btn btn-success' %>
       </div>
    </div>
  </div>

<!--      -->
  <% end %>
<% end %>