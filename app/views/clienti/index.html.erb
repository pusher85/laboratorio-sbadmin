<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
 </div>
<% end %>



<div class="row">
	<div class="col-md-3">
		<%= link_to 'Nuovo Cliente', new_clienti_path, class: "btn btn-primary" %>
	</div>	
</div>


<br>


<div class="divider"></div>

<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				Clienti Censiti
			</div>
			<!-- /.panel-heading -->
			<div class="panel-body">
				<!-- <div class="dataTable_wrapper"> -->
					<!-- <table class="table table-striped table-bordered table-hover table-full-width" id="dataTables-clienti"> -->
					<table class="table table-striped table-bordered table-hover" id="dataTables-clienti">
						<thead>
						  <tr>
								<th><i class="material-icons">perm_identity</i>Nome</th>
								<th><i class="material-icons">drafts</i>Email</th>
								<th><i class="material-icons">phone</i>Telefono</th>
								<th>Visualizza</th>
								<th>Modifica</th>
								<th>Elimina</th>
								<th>Contratti</th>
						  </tr>
					  </thead>
					 
					 	<tbody>
						  <% @clienti.each do |cliente| %>
								<tr>
									<td><%= cliente.nome %></td>
									<td><%= cliente.email %></td>
									<td><%= cliente.telefono %></td>
									<td align="center"><%= link_to '<i class="material-icons" title="visualizza">pageview</i>'.html_safe, clienti_path(cliente), class: 'btn-floating btn-small waves-effect waves-light green' %></td>
									<td align="center"><%= link_to '<i class="material-icons" title="modifica">open_in_browser</i>'.html_safe, edit_clienti_path(cliente), class: 'btn-floating btn-small waves-effect waves-light orange' %></td>
									<td align="center"><%= link_to '<i class="material-icons" title="elimina">delete</i>'.html_safe, clienti_path(cliente),
									  method: :delete,
									  data: { confirm: 'Sicuro di voler eliminare il cliente? Non Ã¨ reversibile' }, class: 'btn-floating btn-small waves-effect waves-light red' %></td>
									<td align="center"><%= link_to '<i class="material-icons" title="contratti">book</i>'.html_safe, clienti_contrattis_path(cliente), class: 'btn-floating btn-small waves-effect waves-light green' %></td>  
								</tr>
						  <% end %>
					  </tbody>
					</table>
				<!-- </div> --><!-- /.dataTable_wrapper -->
			</div><!-- /.panel-body -->
		</div><!-- /.panel panel-default -->
	</div><!-- /.col -->
</div><!-- /.row -->

<%= debug(params) %>


<script>
	$(document).ready(function() {
		$('#dataTables-clienti').DataTable({
              responsive: true,
              "order": [[ 0, "asc" ]],
				 "language": {
								"lengthMenu": "Visualizza _MENU_ records per pagina",
								"zeroRecords": "Nessun risultato - spiacente",
								"info": "Sei a pagina _PAGE_ di _PAGES_",
								"infoEmpty": "Nessun record disponibile",
								"infoFiltered": "(filtrati fra _MAX_ record totali)",
								"paginate": {
											  "next": "Successiva",
											  "previous": "Precedente"
											}
							}
      });
	});
</script>



